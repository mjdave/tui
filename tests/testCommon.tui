
passCount = 0
failCount = 0

assert = function(pass, lineNumber)
{
    if(pass)
    {
        passCount++
    }
    else
    {
        failCount++
        print("test fail! line:", lineNumber)
    }
}

printResult = function()
{
    if(failCount > 0)
    {
        print("tests failed! ", passCount, " tests passed, ", failCount, " tests failed.")
    }
    else
    {
        print("All ", passCount, " tests passed!")
    }
}

